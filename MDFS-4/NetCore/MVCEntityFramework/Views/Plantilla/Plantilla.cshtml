@model ResumenPlantilla

<h1>Resumen departamentos (Lamnda)</h1>
<form method="post">
    <input class="form-control" style="width:300px" name="salario" type="number" placeholder="Salario" required/>
    <button type="submit" class=" = btn btn-check">Buscar</button>
</form>
<hr />


@if (Model.NumEmpleados != 0)
{
    <p>Empleados: @Model.NumEmpleados</p>
    <p>Maximo salario: @Model.Maximo €</p>
    <p>Minimo salario: @Model.Minimo €</p>
}
<hr />
@if (Model.Empleados != null)
{
    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th>Apellido</th>
                <th>Funcion</th>
                <th>Turno</th>
                <th>Salario</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Plantilla emp in Model.Empleados)
            {
                <tr>
                    <td>@emp.Apellido</td>
                    <td>@emp.Funcion</td>
                    <td>@emp.T</td>
                    <td>@emp.Salario</td>
                </tr>
            }
        </tbody>
    </table>
}