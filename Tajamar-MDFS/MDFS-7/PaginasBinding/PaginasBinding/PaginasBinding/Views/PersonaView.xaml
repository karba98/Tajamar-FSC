<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PaginasBinding.Views.PersonaView"
             xmlns:viewmodels ="clr-namespace:PaginasBinding.ViewModels">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout.BindingContext>
                <viewmodels:PersonaViewModel/>
            </StackLayout.BindingContext>
                <Entry HorizontalOptions="FillAndExpand" Text="{Binding Persona.Nombre}"/>
                <Entry HorizontalOptions="FillAndExpand" Text="{Binding Persona.Edad, Mode=TwoWay}"/>
                <Button Text="Mostrar Descripcion" Command="{Binding MostrarDescripcion}"/>
                <Button Text="Nueva Persona" Command="{Binding NewPerson}"/>
            <Label Text="{Binding Descripcion}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>