<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PaginasBinding.Views.BindingObjectsView">
    <ContentPage.Content>
        <StackLayout BackgroundColor="black">
            <Label FontSize="40" Text="Binding Objects" TextColor="White" Margin="0,0,0,20"/>
            <Entry Placeholder="Introduca texto" TextColor="white"
                   BackgroundColor="DarkSlateGray"
                   VerticalOptions="Start"
                   x:Name="cajatexto"
                   HorizontalOptions="FillAndExpand"/>
            <Label FontSize="40"  TextColor="white"
                   BindingContext="{x:Reference cajatexto}"
                   Text="{Binding Path=Text}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>