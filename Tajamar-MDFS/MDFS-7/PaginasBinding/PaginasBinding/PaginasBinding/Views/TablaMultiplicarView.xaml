<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PaginasBinding.Views.TablaMultiplicarView"
             xmlns:viewmodels="clr-namespace:PaginasBinding.ViewModels">
    <ContentPage.Content>
        <StackLayout Padding="15">
            <StackLayout.BindingContext>
                <viewmodels:TablaMultiplicarViewModel/>
            </StackLayout.BindingContext>
            <Entry Placeholder="Numero" Text="{Binding Numero}"/>
            <Button Text="VER TABLA MULTIPLICAR" Margin="0,0,0,15" Command="{Binding MostrarTabla}"/>
            <ListView HasUnevenRows="true" ItemsSource="{Binding Tabla}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{Binding Operacion, StringFormat=Operacion: {0}}"/>
                                <Label Text="{Binding Resultado, StringFormat=Resultado: {0}}"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>