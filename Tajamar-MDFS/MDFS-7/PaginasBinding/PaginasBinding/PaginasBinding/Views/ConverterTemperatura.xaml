<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PaginasBinding.Views.ConverterTemperatura"
             xmlns:Converters="clr-namespace:PaginasBinding.Converters">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Converters:ConverterGrados x:Key="convertergrados"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Converter grados" FontSize="25" VerticalOptions="Start"/>
            <Entry Placeholder="Grados Celsius" Margin="0,0,0,30" x:Name="celsius"/>
            <Entry Placeholder="Farenheit" x:Name="cajaf" 
                    BindingContext="{x:Reference celsius}" 
                   Text="{
                Binding Path=Text ,
                Mode=OneWay, 
                Converter={StaticResource convertergrados}
                }"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>