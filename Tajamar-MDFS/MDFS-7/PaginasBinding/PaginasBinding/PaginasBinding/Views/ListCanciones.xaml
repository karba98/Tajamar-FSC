<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PaginasBinding.Views.ListCanciones">
    <ContentPage.Content>
        <StackLayout>
            <ListView HasUnevenRows = "true" x:Name="listcanciones">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="10" Orientation="Horizontal">
                                <Image HeightRequest="80" WidthRequest="80" Source="{Binding Imagen}"/>
                                <StackLayout Orientation="Vertical">
                                    <Label Text="{Binding Titulo}"/>
                                    <Label Text="{Binding Artista}"/>
                                </StackLayout>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>