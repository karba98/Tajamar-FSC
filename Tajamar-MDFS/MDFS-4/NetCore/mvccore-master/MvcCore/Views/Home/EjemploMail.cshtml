
@{
    ViewData["Title"] = "EjemploMail";
}

<form method="post" enctype="multipart/form-data">
    <label>Para: </label>
    <input type="text" name="destino" class="form-control" /><br />
    <label>Asunto: </label>
    <input type="text" class="form-control" name="asunto" /><br/>
    <label>Mensaje:  </label>
    <textarea class="form-control" name="mensaje"></textarea><br />
    <label>Adjuntos: </label>
    <input type="file" class="form-control-file" name="fichero" /><br/>
    <button type="submit" class="btn btn-dark">Enviar</button>
</form>

<h4>@ViewBag.Mensaje</h4>