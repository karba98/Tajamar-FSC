@model Doctor

<h1>Detalles </h1>
<hr />
<div>
    <h4>Doctor @Model.Apellido</h4>
    <hr />
    <form method="post">
        <dl class="row">
            <input type="number" name="IdDoctor" value="@Html.DisplayFor(model => model.IdDoctor)" hidden />
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IdDoctor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdDoctor)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Apellido)
            </dt>
            <dd class="col-sm-10">
                <input type="text" name="Apellido" value="@Html.DisplayFor(model => model.Apellido)" />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Salario)
            </dt>
            <dd class="col-sm-10">
                <input type="number" name="Salario" value="@Html.DisplayFor(model => model.Salario)" />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.HospitalCod)
            </dt>
            <dd class="col-sm-10">
                <input type="text" name="HospitalCod" value="@Html.DisplayFor(model => model.HospitalCod)" />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Especialidad)
            </dt>
            <dd class="col-sm-10">
                <input type="text" name="Especialidad" value="@Html.DisplayFor(model => model.Especialidad)" />
            </dd>
            <dt class="col-sm-2">
                <button type="submit">Editar</button>
            </dt>
        </dl>

    </form>

</div>
<div>
    <a asp-action="Index" asp-controller="Doctores">Volver</a> |
    <a asp-action="Edit" asp-controller="Doctores" asp-route-id="@Model.IdDoctor">Editar</a> |

</div>


