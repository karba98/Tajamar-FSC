
<h1>Login</h1>
<hr/>
<form method="post">
    <label>Apellido</label>
    <input placeholder="Apellido" class="form-control" type="text" name="username" /><br/>
    <label>Password</label>
    <input placeholder="Password" class="form-control" type="text" name="password" /><br/><br/>
    <button type="submit" class="btn btn-info">
        Log In
    </button>
</form>
<hr/>
<h4 style="color:red">@ViewBag.Mensaje</h4>

