<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.TiposAlertas">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Alertas Xamarin"
                   FontSize="30"
                HorizontalOptions="CenterAndExpand" 
                   Margin="20"/>
            <Button x:Name="alertasimple" Text="Alerta simple"/>
            <Button x:Name="okcancel" Text="OK/Cancel"/>
            <Button x:Name="opciones" Text="Alert Opciones"/>
            <Button x:Name="modal" Text="Ventana modal"/>
            <Label x:Name="lblrespuesta" 
                   TextColor="blue" 
                   FontSize="20"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>